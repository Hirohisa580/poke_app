   
   
   <h1>お気に入り</h1>
   <div class="container">  
        <% @favorite_pokemon.each do |pokemon| %>
            <%= link_to pokemon_path(pokemon.id) do %>
              <% unless pokemon.image_url == nil || pokemon.image_url.blank? %>
                <%= image_tag(pokemon.image_url, size: "170") %>
              <% else %>
                <%= image_tag("体育座りの男.png", size: "170") %>
              <% end %>
            <% end %>
        <% end %>
     </div>