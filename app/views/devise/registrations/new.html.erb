<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label>ニックネーム（必須）<br /></label>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "例）レッド" %>
  </div>

  <div class="field">
    <label>メールアドレス（必須）<br /></label>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <label>パスワード（必須）<br /></label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password%>
  </div>

  <div class="field">
    <label>パスワード（確認）<br /></label>
    <%= f.password_field :password_confirmation%>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= link_to "トップページへ", root_path %>
<%= link_to "ログインはこちら", new_user_session_path %>
